#!/bin/sh
# This file is autogenerated.  If you find problems, please edit NMAppProcessor.java instead

WRAPPER=$0
APP_DIR=`dirname $WRAPPER`/..
JVM=-server
MAINCLASS=net.derkholm.nmica.extra.app.MotifSpikeApplication

if ! [ -e "${APP_DIR}/lib/nmica.jar" ]; then
  echo "Couldn't find nmica.jar.  Have you compiled NestedMICA?"
  exit 1
fi

# If JAVA_HOME is set use that as a JVM pointer.

if [ -z $JAVA_HOME ]; then
  JAVA_CMD=java
else
  JAVA_CMD=${JAVA_HOME}/bin/java
fi

APP_CLASSPATH=${APP_DIR}/lib/changeless.jar:${APP_DIR}/lib/biojava.jar:${APP_DIR}/lib/bytecode.jar:${APP_DIR}/lib/bjv2-core-0.1.jar:${APP_DIR}/lib/stax-api-1.0.1.jar:${APP_DIR}/lib/wstx-lgpl-3.0.2.jar:${APP_DIR}/lib/nmica.jar:${APP_DIR}/lib/nmica-extra.jar

${JAVA_CMD} ${JVM} ${JVMOPTS} -classpath ${APP_CLASSPATH} -Djava.library.path=${NMICA_HOME}/native -Dchangeless.no_dire_warning=true ${MAINCLASS} "$@"
